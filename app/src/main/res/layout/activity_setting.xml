<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <View
            android:id="@+id/Topview1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#947EBE" />

        <View
            android:id="@+id/waveView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="150sp"
            android:background="@drawable/ic_wave" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="165dp"
                android:layout_height="135dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="50sp"
                android:layout_marginEnd="30sp"
                android:text="@string/have_a_nice_day_with_venus"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/listLayout"
            android:layout_width="350sp"
            android:layout_height="100dp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="30sp"
            android:background="@drawable/yellow_bk"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="170sp"
                android:padding="20sp"
                android:text="@string/list"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="250dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10sp"
                android:contentDescription="@string/list_icon"
                android:src="@drawable/list_icon"
                tools:ignore="ImageContrastCheck" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scanLayout"
        android:layout_width="350sp"
        android:layout_height="100dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/blue_bk"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="@string/scan"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/lala"
            android:src="@drawable/venus" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/skinTestLayout"
        android:layout_width="350sp"
        android:layout_height="100dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/yellow_bk"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/userGuideIcon"
            android:src="@drawable/venus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="@string/skinTest"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userGuideLayout"
        android:layout_width="350sp"
        android:layout_height="100sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/blue_bk"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="@string/userGuide"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/userGuideIcon"
            android:src="@drawable/userguide_icon" />
    </RelativeLayout>

</LinearLayout>