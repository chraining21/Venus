<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/Topview1"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="#947EBE" />

        <View
            android:id="@+id/waveView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="115sp"
            android:background="@drawable/ic_wave" />

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="138dp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="30sp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="135dp"
                android:layout_height="123dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="171dp"
                android:layout_height="47dp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="50sp"
                android:layout_marginEnd="30sp"
                android:text="@string/have_a_nice_day_with_venus"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/listLayout"
        android:layout_width="350sp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/blue_bk"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TextView
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="產品記錄"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/list_icon"
            android:src="@drawable/document_syorui_pen"
            tools:ignore="ImageContrastCheck" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scanLayout"
        android:layout_width="350sp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/yellow_bk"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="@string/scan"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/lala"
            android:src="@drawable/internet_screenshot_smartphone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/skinTestLayout"
        android:layout_width="350sp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/blue_bk"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/userGuideIcon"
            android:src="@drawable/biyou_face_pack_open" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="@string/skinTest"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userGuideLayout"
        android:layout_width="350sp"
        android:layout_height="100sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/yellow_bk"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skinTestLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="170sp"
            android:padding="20sp"
            android:text="@string/userGuide"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:contentDescription="@string/userGuideIcon"
            android:src="@drawable/document_rule_book" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>